# Azure OpenAI Configuration (GPT-4o)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Claude Configuration (Alternative)
AZURE_CLAUDE_ENDPOINT=https://your-resource.openai.azure.com/anthropic/v1
AZURE_CLAUDE_API_KEY=your-api-key-here
AZURE_CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Vision Service Selection
# Options: "openai", "claude", or "auto"
VISION_SERVICE=openai

# Database
DB_PATH=app.db

# Image Processing
MAX_IMAGE_BYTES=4194304
IMAGE_MAX_SIDE=1280
IMAGE_JPEG_QUALITY=75
